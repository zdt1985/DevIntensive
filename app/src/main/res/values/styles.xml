<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
    </style>


    <style name="icon">
        <item name="android:layout_width">@dimen/size_small_24</item>
        <item name="android:layout_height">@dimen/size_small_24</item>
    </style>

    <style name="icon_left" parent="icon">
        <item name="android:gravity">top|left</item>
        <item name="android:layout_marginTop">@dimen/spacing_medial_24</item>
        <item name="android:layout_marginLeft">@dimen/spacing_normal_16</item>
    </style>

    <style name="icon_right" parent="icon">
        <item name="android:gravity">top|right</item>
        <item name="android:layout_marginTop">@dimen/spacing_medial_24</item>
        <item name="android:layout_marginRight">@dimen/spacing_medium_32</item>
    </style>

    <style name="item_content">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/size_large_72</item>
        <item name="android:layout_marginLeft">@dimen/spacing_medium_32</item>
        <item name="android:layout_marginRight">@dimen/spacing_normal_16</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">bottom</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="top_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:textSize">@dimen/size_very_small_16</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">@dimen/size_small_24</item>
        <item name="android:textColor">@color/color_gray</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="top_line">
        <item name="android:layout_width">@dimen/line_size</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginBottom">@dimen/size_very_small_16</item>
        <item name="android:layout_marginTop">@dimen/size_very_small_16</item>
        <item name="android:background">@color/color_white</item>
    </style>

    <style name="contact_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/line_size</item>
        <item name="android:layout_marginLeft">@dimen/spacing_larger_72</item>
        <item name="android:background">@color/color_gray</item>
    </style>

    <style name="contact_body">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/size_large_72</item>
        <item name="android:layout_marginLeft">@dimen/spacing_medium_32</item>
        <item name="android:layout_marginRight">@dimen/spacing_medial_24</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">bottom</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="ed_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:enabled">false</item>
        <item name="android:focusable">false</item>
        <item name="android:textColor">@color/color_black</item>
        <item name="android:textColorHint">@color/color_gray</item>
    </style>
    >
</resources>
